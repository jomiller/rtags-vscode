{
    "name": "rtags-client",
    "description": "RTags client",
    "author": "yorver",
    "license": "SEE LICENSE IN License.txt",
    "version": "0.4.0",
    "publisher": "jomiller",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/jomiller/vscode-rtags"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:c",
        "workspaceContains:compile_commands.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "rtags.callHierarchy",
                    "name": "Call Hierarchy",
                    "when": "extension.rtags.callHierarchyVisible"
                },
                {
                    "id": "rtags.inheritanceHierarchy",
                    "name": "Inheritance Hierarchy",
                    "when": "extension.rtags.inheritanceHierarchyVisible"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "command": "rtags.callHierarchy",
                    "when": "resourceLangId == cpp",
                    "group": "navigation@2"
                },
                {
                    "command": "rtags.inheritanceHierarchy",
                    "when": "resourceLangId == cpp",
                    "group": "navigation@3"
                },
                {
                    "command": "rtags.showVariables",
                    "when": "resourceLangId == cpp",
                    "group": "navigation@4"
                },
                {
                    "command": "rtags.showCallers",
                    "when": "resourceLangId == cpp",
                    "group": "navigation@5"
                },
                {
                    "command": "rtags.showBaseClasses",
                    "when": "resourceLangId == cpp",
                    "group": "navigation@6"
                }
            ],
            "view/title": [
                {
                    "command": "rtags.closeCallHierarchy",
                    "when": "view == rtags.callHierarchy",
                    "group": "navigation"
                },
                {
                    "command": "rtags.closeInheritanceHierarchy",
                    "when": "view == rtags.inheritanceHierarchy",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "rtags.gotoLocation",
                    "when": "viewItem == rtagsLocation"
                }
            ],
            "commandPalette": [
                {
                    "command": "rtags.callHierarchy",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "rtags.closeCallHierarchy",
                    "when": "false"
                },
                {
                    "command": "rtags.inheritanceHierarchy",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "rtags.closeInheritanceHierarchy",
                    "when": "false"
                },
                {
                    "command": "rtags.gotoLocation",
                    "when": "false"
                },
                {
                    "command": "rtags.showVariables",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "rtags.showCallers",
                    "when": "resourceLangId == cpp"
                },
                {
                    "command": "rtags.showBaseClasses",
                    "when": "resourceLangId == cpp"
                }
            ]
        },
        "commands": [
            {
                "command": "rtags.freshenIndex",
                "title": "Freshen Index",
                "category": "RTags"
            },
            {
                "command": "rtags.callHierarchy",
                "title": "Call Hierarchy",
                "category": "RTags"
            },
            {
                "command": "rtags.closeCallHierarchy",
                "title": "Close"
            },
            {
                "command": "rtags.inheritanceHierarchy",
                "title": "Inheritance Hierarchy",
                "category": "RTags"
            },
            {
                "command": "rtags.closeInheritanceHierarchy",
                "title": "Close"
            },
            {
                "command": "rtags.gotoLocation",
                "title": "Go to Location"
            },
            {
                "command": "rtags.showVariables",
                "title": "Show Variables",
                "category": "RTags"
            },
            {
                "command": "rtags.showCallers",
                "title": "Show Callers",
                "category": "RTags"
            },
            {
                "command": "rtags.showBaseClasses",
                "title": "Show Base Classes",
                "category": "RTags"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc --watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode": "^1.1.10"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "tslint": "^5.8.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^6.0.88"
    }
}
