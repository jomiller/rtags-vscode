{
    "name": "rtags-client",
    "description": "Rtags client",
    "author": "yorver",
    "license": "SEE LICENSE IN License.txt",
    "version": "0.4.0",
    "publisher": "jomiller",
    "repository": {
        "type": "git",
        "url": "https://github.com/jomiller/rtags-vscode"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:cpp"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "rtags.callhierarcy",
                "title": "Call Hierarchy"
            },
            {
                "command": "rtags.reindex",
                "title": "Reindex file"
            },
            {
                "command": "rtags.selectLocation",
                "title": "Go to location"
            },
            {
                "command": "rtags.addproject",
                "title": "Add project"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "rtagsCallHierarchy",
                    "name": "CallHierarchy"
                }
            ]
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "rtags.reindex",
                    "name": "Reindex"
                },
                {
                    "command": "rtags.addproject",
                    "name": "Add rtags project",
                    "when": "explorerResourceIsFolder"
                }
            ],
            "editor/context": [
                {
                    "command": "rtags.callhierarcy",
                    "name": "CallHierarchy"
                }
            ],
            "view/item/context": [
                {
                    "command": "rtags.selectLocation",
                    "when": "viewItem == rtagsLocation && view==rtagsCallHierarchy"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc --watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode": "^1.1.10"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "tslint": "^5.8.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^6.0.88"
    }
}
